<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AboutMe.SkillsPage">
    <ContentPage.Content>

        <ListView x:Name="skillsListView"
                  HasUnevenRows="True"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                          <Frame Margin="20" Padding="0">
                              <StackLayout Margin="0" Padding="0">
                                 
                                  <Image
                                      Source="{Binding Icon}"
                                      WidthRequest="40"
                                      HeightRequest="40"/>
                                    
                               <StackLayout BackgroundColor="#B9B0A2" Margin="0" Padding="0">
                                  <Label
                                      Text="{Binding Name}"
                                      HorizontalOptions="Center"/>
                                    </StackLayout>
                              </StackLayout>
                          </Frame>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </ContentPage.Content>
</ContentPage>
